<DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8" />
  <title>مرحبًا بك</title>
  <script src="https://cdn.tailwindcss.com"></script> 
</head>
<body class="bg-gray-100 flex items-center justify-center h-screen">
  <div class="bg-white p-8 rounded shadow-md w-full max-w-md text-right">
    <h2 class="text-xl font-bold mb-4">من فضلك قدّم اسمك</h2>
    <input id="username" type="text" placeholder="اسمك" class="w-full p-2 border rounded mb-4" />
    <button onclick="startApp()" class="bg-indigo-600 text-white px-4 py-2 rounded">ابدأ</button>
  </div>

  <script>
    function startApp() {
      const name = document.getElementById('username').value.trim();
      if (!name) return alert("الرجاء إدخال اسمك");
      localStorage.setItem('adminName', name);
      window.location.href = "admin.html";
    }
  </script>
</body>
